        <option value="天秤座">天秤座</option>
        <option value="天蝎座">天蝎座</option>
        <option value="射手座">射手座</option>
        <option value="摩羯座">摩羯座</option>
        <option value="水瓶座">水瓶座</option>
        <option value="双鱼座">双鱼座</option>
    </select>

    <button onclick="calculateCompatibility()">测试匹配度</button>

    <h2 id="result"></h2>
    <div id="heart" class="heart">❤️</div> <!-- 跳动的爱心 -->

    <script>
        function calculateCompatibility() {
            const maleSign = document.getElementById('maleSign').value;
            const femaleSign = document.getElementById('femaleSign').value;

            let compatibility;

            // 特殊匹配逻辑
            if (maleSign === "摩羯座" && femaleSign === "水瓶座") {
                compatibility = 100; // 摩羯座和水瓶座匹配度为100
                document.getElementById('heart').style.display = 'block'; // 显示爱心
            } else {
                compatibility = Math.floor(Math.random() * 100) + 1; // 其他情况随机生成匹配度
                document.getElementById('heart').style.display = 'none'; // 隐藏爱心
            }

            document.getElementById('result').innerText = `${maleSign} 和 ${femaleSign} 的匹配度为 ${compatibility}%`;
        }
    </script>
